# Discord OAuth Configuration (for user login)
# REDIRECT_URI is automatically determined from Replit environment variables
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Session Secret (generate with: openssl rand -base64 64)
SESSION_SECRET=

# Encryption Key (exactly 32 characters - generate with: openssl rand -hex 16)
ENCRYPTION_KEY=

# API Keys (optional)
BLOXLINK_API_KEY=

# Client-side Environment Variables (must be prefixed with VITE_)
VITE_DISCORD_CLIENT_ID=
VITE_DISCORD_BOT_CLIENT_ID=

# RoModerate Bot Configuration (centralized bot for all servers)
DISCORD_BOT_TOKEN=
DISCORD_BOT_CLIENT_ID=
DISCORD_BOT_CLIENT_SECRET=
